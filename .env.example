# Admin Security
ADMIN_PASSWORD=admin123                    # Admin password for protected endpoints
RSA_KEY_SIZE=2048                          # RSA key size for encryption (2048 or 4096)

# RSA Keys for Vercel Deployment
# For local development: keys are auto-generated in the 'keys/' directory
# For Vercel deployment: generate keys locally and set them as environment variables
# To generate keys locally, run: python -c "from security import generate_rsa_key_pair; generate_rsa_key_pair()"
# Then copy the contents of keys/private_key.pem and keys/public_key.pem below
# RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE..."
# RSA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIB..."

# Users Configuration (JSON array format)
# IMPORTANT: Must be a single line wrapped in quotes for python-dotenv to parse correctly
# Each user has: id, name, ngrok_tokens (array), ngrok_api_urls (array)
USERS='[{"id": "user_1", "name": "John Doe", "ngrok_tokens": ["your_ngrok_token_1", "your_ngrok_token_2"], "ngrok_api_urls": ["https://api.ngrok.com"]}, {"id": "user_2", "name": "Jane Smith", "ngrok_tokens": ["your_ngrok_token_3"], "ngrok_api_urls": ["https://api.ngrok.com"]}]'

# Application Settings
AUTO_REFRESH_INTERVAL=5                    # Auto-refresh interval in seconds
RATE_LIMIT_RPM=120                         # Rate limit per minute
MAX_REQUEST_SIZE=5242880                   # Max request size in bytes (5MB)
